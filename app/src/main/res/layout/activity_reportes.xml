<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentacion.ui.ReportesActivity">

    <include
        android:id="@+id/include_toolbar"
        layout="@layout/layout_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Título Principal -->
            <TextView
                android:id="@+id/tv_titulo_reportes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="📊 Generar Reportes en PDF"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/primary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_descripcion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Selecciona el período del reporte que deseas generar"
                android:textSize="14sp"
                android:textColor="@color/grey"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_titulo_reportes" />

            <!-- Card: Reportes Rápidos -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_reportes_rapidos"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_descripcion">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tv_titulo_rapidos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="⚡ Reportes Rápidos"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!-- Botón: Reporte del Día -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_reporte_hoy"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="12dp"
                        android:backgroundTint="@color/accent"
                        android:text="📅 Reporte del Día"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        app:cornerRadius="12dp"
                        app:icon="@android:drawable/ic_menu_today"
                        app:iconTint="@color/white"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_titulo_rapidos" />

                    <!-- Botón: Semana Actual -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_reporte_semana"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="8dp"
                        android:backgroundTint="@color/primary"
                        android:text="📆 Reporte de la Semana"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        app:cornerRadius="12dp"
                        app:icon="@android:drawable/ic_menu_week"
                        app:iconTint="@color/white"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/btn_reporte_hoy" />

                    <!-- Botón: Mes Actual -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_reporte_mes"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="8dp"
                        android:backgroundTint="@color/primaryLight"
                        android:text="📊 Reporte del Mes"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        app:cornerRadius="12dp"
                        app:icon="@android:drawable/ic_menu_month"
                        app:iconTint="@color/white"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/btn_reporte_semana" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Card: Reportes Personalizados -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_reportes_personalizados"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_reportes_rapidos">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tv_titulo_personalizados"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🎯 Reportes Personalizados"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!-- Botón: Últimos 7 Días -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_reporte_7dias"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="12dp"
                        android:backgroundTint="@color/secondary"
                        android:text="🗓️ Últimos 7 Días"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        app:cornerRadius="12dp"
                        app:icon="@android:drawable/ic_menu_recent_history"
                        app:iconTint="@color/white"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_titulo_personalizados" />

                    <!-- Botón: Últimos 30 Días -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_reporte_30dias"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="8dp"
                        android:backgroundTint="#FF6B35"
                        android:text="📈 Últimos 30 Días"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        app:cornerRadius="12dp"
                        app:icon="@android:drawable/ic_menu_month"
                        app:iconTint="@color/white"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/btn_reporte_7dias" />

                    <!-- Botón: Mes Pasado -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_reporte_mes_pasado"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="8dp"
                        android:backgroundTint="#457B9D"
                        android:text="📉 Mes Pasado"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        app:cornerRadius="12dp"
                        app:icon="@android:drawable/ic_menu_revert"
                        app:iconTint="@color/white"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/btn_reporte_30dias" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Card de Información -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#E8F5E9"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_reportes_personalizados">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tv_info_titulo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ℹ️ Información"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#2E7D32"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_info_contenido"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="• Los reportes se guardan en la carpeta Descargas\n• Incluyen ventas, productos más vendidos y estadísticas\n• Formato: PDF profesional\n• Pueden abrirse con cualquier lector de PDF"
                        android:textColor="#2E7D32"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_info_titulo" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>